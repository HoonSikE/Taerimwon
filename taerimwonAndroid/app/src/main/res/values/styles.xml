<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BlackBorder">
        <item name="android:background">@drawable/border</item>
    </style>

    <style name="HeadBold" parent="android:TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="SubHead" parent="android:TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="SubHeadBold" parent="android:TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Body" parent="android:TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="ButtonText" parent="android:TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primaryLightColor</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:includeFontPadding">false</item>
    </style>
</resources>