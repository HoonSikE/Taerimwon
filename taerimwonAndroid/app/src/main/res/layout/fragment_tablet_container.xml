<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_tablet_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints"
            >
            <TextView
                android:id="@+id/text_tablet_title"
                style="@style/SubHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="● 위패 주문"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 위패 종류 -->
        <Spinner
            android:id="@+id/spinner_select_tablet_type"
            style="@style/SubHead"
            android:background="@drawable/edittext_regular"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/layout_tablet_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:entries="@array/selected_tablet_types"
            android:spinnerMode="dropdown"
            android:defaultValue="0"
            />

        <ImageView
            android:id="@+id/image_select_tablet_type"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="@+id/spinner_select_tablet_type"
            app:layout_constraintTop_toTopOf="@+id/spinner_select_tablet_type"
            app:srcCompat="@drawable/ic_spinner"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_tablet_auto_complete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner_select_tablet_type"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            >
            <TextView
                android:id="@+id/text_auto_complete"
                style="@style/SubHeadBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="위패 종류"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextView"
                style="@style/SubHead"
                android:backgroundTint="@color/gold"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="검색어를 입력해주세요."
                android:completionThreshold="0"
                android:gravity="center_vertical"
                android:textColorHint="#555555"
                app:layout_constraintTop_toBottomOf="@+id/text_auto_complete"/>

            <TextView
                android:id="@+id/text_tablet_tablet_photo"
                style="@style/Body"
                android:textColor="@color/redTextColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="* 검색창을 클릭하면 목록을 확인할 수 있습니다."
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/autoCompleteTextView"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_tablet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/layout_tablet_auto_complete"
            tools:ignore="MissingConstraints"
            android:visibility="gone"
            >
            <!-- 종교 -->
            <TextView
                android:id="@+id/text_religion"
                style="@style/SubHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="종교"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <Spinner
                android:id="@+id/spinner_religion"
                style="@style/SubHead"
                android:background="@drawable/edittext_regular"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_religion"
                android:entries="@array/religion"
                android:spinnerMode="dropdown"
                android:defaultValue="0"
                />

            <ImageView
                android:id="@+id/image_religion"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="@+id/spinner_religion"
                app:layout_constraintTop_toTopOf="@+id/spinner_religion"
                app:srcCompat="@drawable/ic_spinner"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_tablet_type"
                android:layout_marginVertical="8dp"
                android:paddingVertical="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/image_religion"
                tools:ignore="MissingConstraints"
                >
                <TextView
                    android:id="@+id/text_tablet_type"
                    style="@style/SubHead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="위패 각인 종류"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview_tablet_type"
                    android:background="@drawable/edittext_regular"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginVertical="8dp"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:scrollbars="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_tablet_type" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_tablet_select_type"
                android:layout_marginVertical="8dp"
                android:paddingVertical="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/layout_tablet_type"
                tools:ignore="MissingConstraints"
                >
                <!-- 정보 입력 -->
                <TextView
                    android:id="@+id/text_tablet_input_title"
                    style="@style/SubHeadBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:text="● 정보 입력"
                    app:layout_constraintStart_toStartOf="parent"
                    />
                <!-- 직분, 세례명, 법명 -->
                <TextView
                    android:id="@+id/text_tablet_name2"
                    style="@style/SubHead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:text="직분, 세례명, 법명"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_tablet_input_title" />

                <EditText
                    android:id="@+id/editText_tablet_name2"
                    style="@style/Body"
                    android:background="@drawable/edittext_regular"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    android:ems="10"
                    android:hint="직분, 세례명, 법명을 입력하세요"
                    android:imeOptions="actionDone"
                    android:inputType="textPersonName"
                    android:maxLength="10"
                    android:paddingLeft="48dp"
                    android:textColorHint="@color/hintGray"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_tablet_name2" />

                <ImageView
                    android:id="@+id/image_tablet_name2"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="@+id/editText_tablet_name2"
                    app:layout_constraintTop_toTopOf="@+id/editText_tablet_name2"
                    app:srcCompat="@drawable/ic_name"
                    />

                <!-- 본관, 문구 -->
                <TextView
                    android:id="@+id/text_name3"
                    style="@style/SubHead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:text="본관, 문구"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/editText_tablet_name2" />

                <EditText
                    android:id="@+id/editText_name3"
                    style="@style/Body"
                    android:background="@drawable/edittext_regular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    android:ems="10"
                    android:hint="본관, 문구를 입력하세요"
                    android:inputType="textMultiLine|textNoSuggestions"
                    android:lines="1"
                    android:maxLines="1"
                    android:imeOptions="actionDone"
                    android:maxLength="4"
                    android:paddingLeft="48dp"
                    android:textColorHint="@color/hintGray"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_name3" />

                <ImageView
                    android:id="@+id/image_name3"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="@+id/editText_name3"
                    app:layout_constraintTop_toTopOf="@+id/editText_name3"
                    app:srcCompat="@drawable/ic_name"
                    />

                <ImageView
                    android:id="@+id/image_heart"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="@+id/editText_name3"
                    app:layout_constraintTop_toTopOf="@+id/editText_name3"
                    app:srcCompat="@drawable/ic_heart_pink"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_tablet_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@+id/layout_tablet"
            tools:ignore="MissingConstraints"
            android:visibility="gone"
            >
            <!-- 이미지 첨부 뷰 -->
            <ImageView
                android:id="@+id/image_add_photo"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/img_profile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:elevation="4dp"
            />

            <!-- 사진 첨부 안내 메시지 -->
            <Button
                android:id="@+id/text_add_photo"
                style="@style/SubHeadWhite"
                android:background="@drawable/edittext_regular"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:text="사진 첨부 (가로:세로 = 3:4)"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_add_photo"
                android:layout_marginTop="4dp"
                android:clickable="true"
                android:focusable="true"
            />

            <TextView
                android:id="@+id/text_tablet_photo"
                style="@style/Body"
                android:textColor="@color/redTextColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="사진 위패는 시안을 추후 제공해드립니다."
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_add_photo"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--위패 추가-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_bone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/layout_tablet_photo"
            tools:ignore="MissingConstraints"
            >
            <!-- 위패 종류 -->
            <TextView
                android:id="@+id/text_select_bone_tablet_type"
                style="@style/SubHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="● 위패 추가 주문"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <Spinner
                android:id="@+id/spinner_select_bone_tablet_type"
                style="@style/SubHead"
                android:background="@drawable/edittext_regular"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/text_select_bone_tablet_type"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:entries="@array/selected_tablet_types2"
                android:spinnerMode="dropdown"
                android:defaultValue="0"
                />

            <ImageView
                android:id="@+id/image_select_bone_tablet_type"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="@+id/spinner_select_bone_tablet_type"
                app:layout_constraintTop_toTopOf="@+id/spinner_select_bone_tablet_type"
                app:srcCompat="@drawable/ic_spinner"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_bone_tablet"
                android:background="@drawable/view_radius_woman"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:layout_marginHorizontal="16dp"
                android:paddingHorizontal="16dp"
                android:paddingBottom="16dp"
                app:layout_constraintTop_toBottomOf="@+id/spinner_select_bone_tablet_type"
                tools:ignore="MissingConstraints"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_tablet2_auto_complete"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp"
                    >
                    <TextView
                        android:id="@+id/text_auto_complete2"
                        style="@style/SubHeadBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="위패[추가] 종류"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />
                    <AutoCompleteTextView
                        android:id="@+id/autoCompleteTextView2"
                        style="@style/SubHead"
                        android:backgroundTint="@color/gold"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:hint="검색어를 입력해주세요."
                        android:completionThreshold="0"
                        android:gravity="center_vertical"
                        android:textColorHint="#555555"
                        app:layout_constraintTop_toBottomOf="@+id/text_auto_complete2"/>

                    <TextView
                        android:id="@+id/text_tablet2_tablet_photo"
                        style="@style/Body"
                        android:textColor="@color/redTextColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="* 검색창을 클릭하면 목록을 확인할 수 있습니다."
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/autoCompleteTextView2"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- 성별 -->
                <TextView
                    android:id="@+id/text_bone_sex"
                    style="@style/SubHead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="성별"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layout_tablet2_auto_complete"
                    />

                <Spinner
                    android:id="@+id/spinner_bone_sex"
                    style="@style/Body"
                    android:background="@drawable/edittext_regular"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_bone_sex"
                    android:entries="@array/bone_sex"
                    android:spinnerMode="dropdown"
                    android:defaultValue="0"
                    />

                <ImageView
                    android:id="@+id/image_bone_sex"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintEnd_toEndOf="@+id/spinner_bone_sex"
                    app:layout_constraintTop_toTopOf="@+id/spinner_bone_sex"
                    app:srcCompat="@drawable/ic_spinner"
                    />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_bone_tablet2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/image_bone_sex"
                    tools:ignore="MissingConstraints"
                    android:visibility="gone"
                    >
                    <!-- 종교 -->
                    <TextView
                        android:id="@+id/text_bone_religion"
                        style="@style/SubHead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="종교"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                    <Spinner
                        android:id="@+id/spinner_bone_religion"
                        style="@style/SubHead"
                        android:background="@drawable/edittext_regular"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/text_bone_religion"
                        android:entries="@array/religion"
                        android:spinnerMode="dropdown"
                        android:defaultValue="0"
                        />

                    <ImageView
                        android:id="@+id/image_bone_religion"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginTop="10dp"
                        app:layout_constraintEnd_toEndOf="@+id/spinner_bone_religion"
                        app:layout_constraintTop_toTopOf="@+id/spinner_bone_religion"
                        app:srcCompat="@drawable/ic_spinner"
                        />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_bone_tablet_type"
                        android:layout_marginVertical="8dp"
                        android:paddingVertical="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@+id/image_bone_religion"
                        tools:ignore="MissingConstraints"
                        >
                        <TextView
                            android:id="@+id/text_bone_tablet_type"
                            style="@style/SubHead"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="위패 각인 종류"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            />
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerview_bone_tablet_type"
                            android:background="@drawable/edittext_regular"
                            android:layout_marginHorizontal="8dp"
                            android:layout_marginVertical="8dp"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:scrollbars="horizontal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/text_bone_tablet_type" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_bone_tablet_select_type"
                        android:layout_marginVertical="8dp"
                        android:paddingVertical="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@+id/layout_bone_tablet_type"
                        tools:ignore="MissingConstraints"
                        >
                        <!-- 정보 입력 -->
                        <TextView
                            android:id="@+id/text_tablet_input_title2"
                            style="@style/SubHeadBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="● 정보 입력"
                            app:layout_constraintStart_toStartOf="parent"
                            />
                        <!-- 직분, 세례명, 법명 -->
                        <TextView
                            android:id="@+id/text_bone_tablet_name2"
                            style="@style/SubHead"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="직분, 세례명, 법명"
                            android:visibility="gone"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/text_tablet_input_title2" />

                        <EditText
                            android:id="@+id/editText_bone_tablet_name2"
                            style="@style/Body"
                            android:background="@drawable/edittext_regular"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_marginTop="8dp"
                            android:ems="10"
                            android:hint="직분, 세례명, 법명을 입력하세요"
                            android:imeOptions="actionDone"
                            android:inputType="textPersonName"
                            android:maxLength="10"
                            android:paddingLeft="48dp"
                            android:textColorHint="@color/hintGray"
                            android:visibility="gone"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/text_bone_tablet_name2" />

                        <ImageView
                            android:id="@+id/image_bone_tablet_name2"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="10dp"
                            android:visibility="gone"
                            app:layout_constraintStart_toStartOf="@+id/editText_bone_tablet_name2"
                            app:layout_constraintTop_toTopOf="@+id/editText_bone_tablet_name2"
                            app:srcCompat="@drawable/ic_name"
                            />

                        <!-- 본관, 문구 -->
                        <TextView
                            android:id="@+id/text_bone_name3"
                            style="@style/SubHead"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="본관, 문구"
                            android:visibility="gone"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/editText_bone_tablet_name2" />

                        <EditText
                            android:id="@+id/editText_bone_name3"
                            style="@style/Body"
                            android:background="@drawable/edittext_regular"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:minHeight="48dp"
                            android:layout_marginVertical="8dp"
                            android:ems="10"
                            android:hint="본관, 문구를 입력하세요"
                            android:inputType="textMultiLine|textNoSuggestions"
                            android:lines="1"
                            android:maxLines="1"
                            android:imeOptions="actionDone"
                            android:maxLength="4"
                            android:paddingLeft="48dp"
                            android:textColorHint="@color/hintGray"
                            android:visibility="gone"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/text_bone_name3"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <ImageView
                            android:id="@+id/image_bone_name3"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="10dp"
                            android:visibility="gone"
                            app:layout_constraintStart_toStartOf="@+id/editText_bone_name3"
                            app:layout_constraintTop_toTopOf="@+id/editText_bone_name3"
                            app:srcCompat="@drawable/ic_name"
                            />

                        <ImageView
                            android:id="@+id/image_bone_heart"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginTop="10dp"
                            android:visibility="gone"
                            app:layout_constraintEnd_toEndOf="@+id/editText_bone_name3"
                            app:layout_constraintTop_toTopOf="@+id/editText_bone_name3"
                            app:srcCompat="@drawable/ic_heart_pink"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_bone_tablet_photo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/layout_bone_tablet2"
                    tools:ignore="MissingConstraints"
                    android:visibility="gone"
                    >
                    <!-- 이미지 첨부 뷰 -->
                    <ImageView
                        android:id="@+id/image_bone_add_photo"
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/img_profile"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:elevation="4dp"
                        />

                    <!-- 사진 첨부 안내 메시지 -->
                    <Button
                        android:id="@+id/text_bone_add_photo"
                        style="@style/SubHeadWhite"
                        android:background="@drawable/edittext_regular"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:text="사진 첨부 (비율: 가로:세로 = 3:4)"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/image_bone_add_photo"
                        android:layout_marginTop="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        />

                    <TextView
                        android:id="@+id/text_bone_tablet_photo"
                        style="@style/Body"
                        android:textColor="@color/redTextColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="사진 위패는 시안을 추후 제공해드립니다."
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/text_bone_add_photo"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/menuButtonGroup"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_bone_tablet"
                android:gravity="center"
                android:visibility="gone"
                >

                <TextView
                    android:id="@+id/menuButton1"
                    style="@style/SubHeadWhite"
                    android:background="@drawable/button_primary"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:text="직분위/세례아"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/menuButton2"
                    android:layout_marginRight="4dp"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/menuButton2"
                    style="@style/SubHead"
                    android:background="@drawable/button_gray"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:text="위/위"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/menuButton1"
                    app:layout_constraintEnd_toStartOf="@+id/menuButton3"
                    android:layout_marginRight="4dp"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/menuButton3"
                    style="@style/SubHead"
                    android:background="@drawable/button_gray"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:text="위/위(세로)"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/menuButton2"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="4dp"
                    android:gravity="center"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>