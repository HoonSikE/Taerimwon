<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/view_radius"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="16dp"
        android:paddingHorizontal="8dp"
        android:paddingVertical="20dp">

        <!-- 위패 종류 -->
        <TextView
            android:id="@+id/text_select_tablet_type"
            style="@style/SubHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* 위패 종류"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <Spinner
            android:id="@+id/spinner_select_tablet_type"
            style="@style/SubHead"
            android:background="@drawable/edittext_regular"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/text_select_tablet_type"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:entries="@array/selected_tablet_types"
            android:spinnerMode="dropdown"
            android:defaultValue="0"
            />

        <ImageView
            android:id="@+id/image_select_tablet_type"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="@+id/spinner_select_tablet_type"
            app:layout_constraintTop_toTopOf="@+id/spinner_select_tablet_type"
            app:srcCompat="@drawable/ic_spinner"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_tablet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/spinner_select_tablet_type"
            tools:ignore="MissingConstraints"
            >
            <!-- 종교 -->
            <TextView
                android:id="@+id/text_religion"
                style="@style/SubHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="* 종교"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <Spinner
                android:id="@+id/spinner_religion"
                style="@style/SubHead"
                android:background="@drawable/edittext_regular"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_religion"
                android:entries="@array/religion"
                android:spinnerMode="dropdown"
                android:defaultValue="0"
                />

            <ImageView
                android:id="@+id/image_religion"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="@+id/spinner_religion"
                app:layout_constraintTop_toTopOf="@+id/spinner_religion"
                app:srcCompat="@drawable/ic_spinner"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_tablet_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/spinner_religion"
                tools:ignore="MissingConstraints"
                >
                <TextView
                    android:id="@+id/text_tablet_title"
                    style="@style/SubHead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="위패 주문"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_tablet_type"
                android:layout_marginVertical="8dp"
                android:paddingVertical="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/layout_tablet_title"
                tools:ignore="MissingConstraints"
                >
                <TextView
                    android:id="@+id/text_tablet_type"
                    style="@style/SubHead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="위패 각인 종류"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview_tablet_type"
                    android:background="@drawable/edittext_regular"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginVertical="16dp"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:scrollbars="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_tablet_type" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_tablet_select_type"
                android:layout_marginVertical="8dp"
                android:paddingVertical="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/layout_tablet_type"
                tools:ignore="MissingConstraints"
                >
                <!-- 직분, 세례명, 법명 -->
                <TextView
                    android:id="@+id/text_name2"
                    style="@style/SubHead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="* 직분, 세례명, 법명"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/editText_name2"
                    style="@style/Body"
                    android:background="@drawable/edittext_regular"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    android:ems="10"
                    android:hint="직분, 세례명, 법명을 입력하세요"
                    android:imeOptions="actionDone"
                    android:inputType="textPersonName"
                    android:maxLength="10"
                    android:paddingLeft="48dp"
                    android:textColorHint="@color/hintGray"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_name2" />

                <ImageView
                    android:id="@+id/image_name2"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="@+id/editText_name2"
                    app:layout_constraintTop_toTopOf="@+id/editText_name2"
                    app:srcCompat="@drawable/ic_name"
                    />

                <!-- 본관, 문구 -->
                <TextView
                    android:id="@+id/text_name3"
                    style="@style/SubHead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="* 본관, 문구"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/editText_name2" />

                <EditText
                    android:id="@+id/editText_name3"
                    style="@style/Body"
                    android:background="@drawable/edittext_regular"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    android:ems="10"
                    android:hint="본관, 문구를 입력하세요"
                    android:imeOptions="actionDone"
                    android:inputType="textPersonName"
                    android:maxLength="4"
                    android:paddingLeft="48dp"
                    android:textColorHint="@color/hintGray"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/image_heart"
                    app:layout_constraintTop_toBottomOf="@id/text_name3" />

                <ImageView
                    android:id="@+id/image_name3"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="@+id/editText_name3"
                    app:layout_constraintTop_toTopOf="@+id/editText_name3"
                    app:srcCompat="@drawable/ic_name"
                    />

                <ImageView
                    android:id="@+id/image_heart"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    app:layout_constraintStart_toEndOf="@+id/editText_name3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/editText_name3"
                    app:srcCompat="@drawable/ic_heart_pink"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_tablet_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="16dp"
            app:layout_constraintTop_toBottomOf="@+id/layout_tablet"
            tools:ignore="MissingConstraints"
            android:visibility="gone"
            >
            <!-- 이미지 첨부 뷰 -->
            <ImageView
                android:id="@+id/image_add_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:src="@drawable/img_logo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
            />

            <!-- 사진 첨부 안내 메시지 -->
            <Button
                android:id="@+id/text_add_photo"
                style="@style/Body"
                android:background="@drawable/edittext_regular"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:text="사진 첨부"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_add_photo"
                android:clickable="true"
                android:focusable="true"
            />

            <TextView
                android:id="@+id/text_tablet_photo"
                style="@style/SubHead"
                android:textColor="@color/redTextColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="* 사진 위패는 시안을 추후 제공해드립니다."
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_add_photo"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>