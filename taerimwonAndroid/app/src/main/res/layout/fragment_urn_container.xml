<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_urn_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints"
            >
            <TextView
                android:id="@+id/text_urn_title"
                style="@style/SubHeadBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="● 유골함 주문"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <Spinner
            android:id="@+id/spinner_urn_type"
            style="@style/SubHead"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittext_regular"
            android:defaultValue="0"
            android:entries="@array/selected_urn_types"
            android:spinnerMode="dropdown"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_urn_title" />

        <ImageView
            android:id="@+id/image_urn_type"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="@+id/spinner_urn_type"
            app:layout_constraintTop_toTopOf="@+id/spinner_urn_type"
            app:srcCompat="@drawable/ic_spinner"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_urn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="16dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner_urn_type"
            tools:ignore="MissingConstraints"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_urn_auto_complete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                >
                <TextView
                    android:id="@+id/text_auto_complete"
                    style="@style/SubHeadBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="유골함 종류"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />
                <AutoCompleteTextView
                    android:id="@+id/autoCompleteTextView"
                    style="@style/SubHead"
                    android:backgroundTint="@color/gold"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:hint="검색어를 입력해주세요."
                    android:completionThreshold="0"
                    android:gravity="center_vertical"
                    android:textColorHint="#555555"
                    app:layout_constraintTop_toBottomOf="@+id/text_auto_complete"/>

                <TextView
                    android:id="@+id/text_urn_tablet_photo"
                    style="@style/Body"
                    android:textColor="@color/redTextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="* 검색창을 클릭하면 목록을 확인할 수 있습니다."
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/autoCompleteTextView"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--유골함-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_engrave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/layout_urn_auto_complete"
                tools:ignore="MissingConstraints"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_engrave_type"
                    android:paddingVertical="8dp"
                    android:layout_marginHorizontal="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints"
                    >
                    <TextView
                        android:id="@+id/text_engrave_type"
                        style="@style/SubHeadBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="유골함 각인 종류"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerview_engrave_type"
                        android:background="@drawable/edittext_regular"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginVertical="8dp"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:scrollbars="horizontal"
                        app:layout_constraintTop_toBottomOf="@+id/text_engrave_type"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_engrave_select_type"
                    android:layout_marginVertical="8dp"
                    android:layout_marginHorizontal="8dp"
                    android:paddingVertical="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@+id/layout_engrave_type"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="40dp">

                    <TextView
                        android:id="@+id/text_engrave_select_type"
                        style="@style/SubHeadBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="각인 세부 종류"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerview_engrave_select_type"
                        android:background="@drawable/edittext_regular"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginVertical="8dp"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:scrollbars="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/text_engrave_select_type" />
                    <!-- 정보 입력 -->
                    <TextView
                        android:id="@+id/text_dead_title"
                        style="@style/SubHead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="● 정보 입력"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/recyclerview_engrave_select_type" />

                    <CheckBox
                        android:id="@+id/checkbox_catholic"
                        style="@style/SubHeadBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="소천->별세 변경"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/text_dead_title"
                        app:layout_constraintBottom_toBottomOf="@id/text_dead_title"
                        android:visibility="gone"
                        />

                    <!-- 고인 명 -->
                    <TextView
                        android:id="@+id/text_name1"
                        style="@style/SubHead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="고인 명"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/text_dead_title" />

                    <EditText
                        android:id="@+id/editText_name1"
                        style="@style/Body"
                        android:textColor="#000000"
                        android:background="@drawable/edittext_regular"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="8dp"
                        android:ems="10"
                        android:hint="이름을 입력하세요"
                        android:imeOptions="actionDone"
                        android:inputType="textPersonName"
                        android:maxLength="4"
                        android:paddingLeft="48dp"
                        android:textColorHint="@color/hintGray"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/text_name1" />

                    <ImageView
                        android:id="@+id/image_name1"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="10dp"
                        app:layout_constraintStart_toStartOf="@+id/editText_name1"
                        app:layout_constraintTop_toTopOf="@+id/editText_name1"
                        app:srcCompat="@drawable/ic_name"
                        />

                    <!-- 직분, 세례명, 법명 -->
                    <TextView
                        android:id="@+id/text_name2"
                        style="@style/SubHead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="직분, 세례명, 법명"
                        android:visibility="gone"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/editText_name1" />

                    <EditText
                        android:id="@+id/editText_name2"
                        style="@style/Body"
                        android:textColor="#000000"
                        android:background="@drawable/edittext_regular"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:ems="10"
                        android:hint="직분, 세례명, 법명을 입력하세요"
                        android:imeOptions="actionDone"
                        android:inputType="textPersonName"
                        android:maxLength="4"
                        android:paddingLeft="48dp"
                        android:textColorHint="@color/hintGray"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/text_name2"
                        />

                    <ImageView
                        android:id="@+id/image_name2"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="10dp"
                        android:visibility="gone"
                        app:layout_constraintStart_toStartOf="@+id/editText_name2"
                        app:layout_constraintTop_toTopOf="@+id/editText_name2"
                        app:srcCompat="@drawable/ic_heart"
                        />

                    <!-- 고인 생년월일 -->
                    <TextView
                        android:id="@+id/text_date1"
                        style="@style/SubHead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="생년월일"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/editText_name2" />

                    <EditText
                        android:id="@+id/editText_date1"
                        style="@style/Body"
                        android:textColor="#000000"
                        android:background="@drawable/edittext_regular"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginTop="8dp"
                        android:ems="10"
                        android:hint="1900-01-01"
                        android:imeOptions="actionDone"
                        android:inputType="date"
                        android:maxLength="10"
                        android:paddingLeft="48dp"
                        android:textColorHint="@color/hintGray"
                        app:layout_constraintEnd_toStartOf="@+id/spinner_date1_type"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/text_date1" />

                    <ImageView
                        android:id="@+id/image_date1"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="10dp"
                        app:layout_constraintStart_toStartOf="@+id/editText_date1"
                        app:layout_constraintTop_toTopOf="@+id/editText_date1"
                        app:srcCompat="@drawable/ic_calendar"
                        />

                    <Spinner
                        android:id="@+id/spinner_date1_type"
                        style="@style/SubHead"
                        android:background="@drawable/edittext_regular"
                        android:layout_width="100dp"
                        android:layout_height="48dp"
                        app:layout_constraintEnd_toEndOf="@+id/editText_name1"
                        app:layout_constraintStart_toEndOf="@+id/editText_date1"
                        app:layout_constraintTop_toTopOf="@+id/editText_date1"
                        android:entries="@array/date_types"
                        android:spinnerMode="dropdown"
                        android:defaultValue="0"
                        android:gravity="center"/>

                    <ImageView
                        android:id="@+id/image_date1_type"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginTop="10dp"
                        app:layout_constraintEnd_toEndOf="@+id/spinner_date1_type"
                        app:layout_constraintTop_toTopOf="@+id/spinner_date1_type"
                        app:srcCompat="@drawable/ic_spinner"
                        />

                    <!-- 고인 사망월일 -->
                    <TextView
                        android:id="@+id/text_date2"
                        style="@style/SubHead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="사망월일"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/editText_date1" />

                    <EditText
                        android:id="@+id/editText_date2"
                        style="@style/Body"
                        android:textColor="#000000"
                        android:background="@drawable/edittext_regular"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginTop="8dp"
                        android:ems="10"
                        android:hint="2023-09-01"
                        android:imeOptions="actionDone"
                        android:inputType="date"
                        android:maxLength="10"
                        android:paddingLeft="48dp"
                        android:textColorHint="@color/hintGray"
                        app:layout_constraintEnd_toStartOf="@+id/spinner_date2_type"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/text_date2" />일

                    <ImageView
                        android:id="@+id/image_date2"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintStart_toStartOf="@+id/editText_date2"
                        app:layout_constraintTop_toTopOf="@+id/editText_date2"
                        app:srcCompat="@drawable/ic_calendar"
                        />

                    <Spinner
                        android:id="@+id/spinner_date2_type"
                        style="@style/SubHead"
                        android:background="@drawable/edittext_regular"
                        android:layout_width="100dp"
                        android:layout_height="48dp"
                        app:layout_constraintEnd_toEndOf="@+id/editText_name1"
                        app:layout_constraintStart_toEndOf="@+id/editText_date2"
                        app:layout_constraintTop_toTopOf="@+id/editText_date2"
                        android:entries="@array/date_types"
                        android:spinnerMode="dropdown"
                        android:defaultValue="0"
                        android:gravity="center"/>

                    <ImageView
                        android:id="@+id/image_date2_type"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginTop="10dp"
                        app:layout_constraintEnd_toEndOf="@+id/spinner_date2_type"
                        app:layout_constraintTop_toTopOf="@+id/spinner_date2_type"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:srcCompat="@drawable/ic_spinner"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/text_urn_guide"
                style="@style/Body"
                android:textColor="@color/redTextColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="* 표석 선택시 발주 주시면 별도로 안내해 드리겠습니다."
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_engrave"
                android:visibility="gone"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_bone_urn_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/text_urn_guide"
                tools:ignore="MissingConstraints"
                android:visibility="gone"
                >
                <TextView
                    android:id="@+id/text_bone_urn_title"
                    style="@style/SubHeadBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="● 유골함[합골] 주문"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />
                <Spinner
                    android:id="@+id/spinner_bone_urn_type"
                    style="@style/SubHead"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/edittext_regular"
                    android:defaultValue="0"
                    android:entries="@array/selected_urn_types2"
                    android:spinnerMode="dropdown"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_bone_urn_title" />

                <ImageView
                    android:id="@+id/image_bone_urn_type"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintEnd_toEndOf="@+id/spinner_bone_urn_type"
                    app:layout_constraintTop_toTopOf="@+id/spinner_bone_urn_type"
                    app:srcCompat="@drawable/ic_spinner"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--추가 / 합골-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_bone_engrave"
                android:background="@drawable/view_radius_woman"
                android:paddingHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:paddingVertical="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/layout_bone_urn_title"
                tools:ignore="MissingConstraints"
                android:visibility="gone"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_urn_auto_complete2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:visibility="gone"
                    >
                    <TextView
                        android:id="@+id/text_auto_complete2"
                        style="@style/SubHeadBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="유골함 종류"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />
                    <AutoCompleteTextView
                        android:id="@+id/autoCompleteTextView2"
                        style="@style/SubHead"
                        android:backgroundTint="@color/gold"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:hint="검색어를 입력해주세요."
                        android:completionThreshold="0"
                        android:gravity="center_vertical"
                        android:textColorHint="#555555"
                        app:layout_constraintTop_toBottomOf="@+id/text_auto_complete2"/>

                    <TextView
                        android:id="@+id/text_urn_tablet_photo2"
                        style="@style/Body"
                        android:textColor="@color/redTextColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="* 검색창을 클릭하면 목록을 확인할 수 있습니다."
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/autoCompleteTextView2"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_bone_engrave_type"
                    android:layout_marginVertical="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@+id/layout_urn_auto_complete2"
                    tools:ignore="MissingConstraints"
                    >
                    <TextView
                        android:id="@+id/text_bone_engrave_type"
                        style="@style/SubHeadBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="유골함[합골] 각인 종류"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerview_bone_engrave_type"
                        android:background="@drawable/edittext_regular"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginVertical="8dp"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:scrollbars="horizontal"
                        app:layout_constraintTop_toBottomOf="@+id/text_bone_engrave_type"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_bone_engrave_select_type"
                    android:layout_marginVertical="8dp"
                    android:paddingVertical="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@+id/layout_bone_engrave_type"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="40dp">

                    <TextView
                        android:id="@+id/text_bone_engrave_select_type"
                        style="@style/SubHeadBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="유골함[합골] 상세 종류"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerview_bone_engrave_select_type"
                        android:background="@drawable/edittext_regular"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginVertical="8dp"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:scrollbars="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/text_bone_engrave_select_type" />

                    <!-- 정보 입력 -->
                    <TextView
                        android:id="@+id/text_bone_dead_title"
                        style="@style/SubHeadBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="● 정보 입력"
                        app:layout_constraintStart_toStartOf="parent"
