<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/linearBackground">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll_view_order"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/button_result_fragment"
            app:layout_constraintVertical_bias="0.0">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_order_logo"
                    android:layout_marginTop="10dp"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:src="@drawable/img_logo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/layout_order_title"
                    />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_order_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@+id/image_order_logo"
                    tools:ignore="MissingConstraints"
                    >
                    <TextView
                        android:id="@+id/text_order_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:text="기본 정보 입력"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <!--=====발주자 정보 입력=====-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_leader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@+id/layout_order_title"
                    tools:ignore="MissingConstraints"
                    >
                    <!-- 발주자 정보 입력 -->
                    <TextView
                        android:id="@+id/text_leader_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:text="● 발주자 정보 입력 (필수)"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                    <CheckBox
                        android:id="@+id/checkbox_leader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="정보 저장"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                    <!-- 발주자 명 -->
                    <TextView
                        android:id="@+id/text_leader_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:text="* 발주자 명"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/text_leader_title"
                        />

                    <EditText
                        android:id="@+id/editText_leader_name"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="8dp"
                        android:ems="10"
                        android:hint="이름을 입력하세요"
                        android:paddingLeft="48dp"
                        android:imeOptions="actionDone"
                        android:inputType="textPersonName"
                        android:maxLength="4"
                        android:textColorHint="@color/hintGray"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/text_leader_name"
                        />

                    <ImageView
                        android:id="@+id/image_leader_name"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintStart_toStartOf="@+id/editText_leader_name"
                        app:layout_constraintTop_toTopOf="@+id/editText_leader_name"
                        />

                    <!-- 발주자 전화번호 -->
                    <TextView
                        android:id="@+id/text_leader_tel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="24dp"
                        android:text="* 전화번호"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/editText_leader_name"
                        />

                    <EditText
                        android:id="@+id/editText_leader_tel"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="8dp"
                        android:ems="10"
                        android:hint="010-1234-5678"
                        android:paddingLeft="48dp"
                        android:imeOptions="actionDone"
                        android:inputType="phone"
                        android:maxLength="13"
                        android:textColorHint="@color/hintGray"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/text_leader_tel"
                        />

                    <ImageView
                        android:id="@+id/image_leader_tel"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintStart_toStartOf="@+id/editText_leader_tel"
                        app:layout_constraintTop_toTopOf="@+id/editText_leader_tel"
                        />

                    <!--소속-->
                    <TextView
                        android:id="@+id/text_leader_department"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="24dp"
                        android:text="* 소속"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/editText_leader_tel"
                        />

                    <EditText
                        android:id="@+id/editText_leader_department"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="8dp"
                        android:ems="10"
                        android:hint="소속"
                        android:paddingLeft="48dp"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:maxLength="8"
                        android:textColorHint="@color/hintGray"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/text_leader_department"
                        />

                    <ImageView
                        android:id="@+id/image_leader_department"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintStart_toStartOf="@+id/editText_leader_department"
                        app:layout_constraintTop_toTopOf="@+id/editText_leader_department"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- 상주 정보 입력 -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_client"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@+id/layout_leader"
                    tools:ignore="MissingConstraints"
                    >
                    <!-- 발주자 정보 입력 -->
                    <TextView
                        android:id="@+id/text_client_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:text="● 상주 정보 입력 (선택)"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                    <!-- 상주 명 -->
                    <TextView
                        android:id="@+id/text_client_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:text="* 상주 명"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/text_client_title"
                        />

                    <EditText
                        android:id="@+id/editText_client_name"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="8dp"
                        android:ems="10"
                        android:hint="이름을 입력하세요."
                        android:paddingLeft="48dp"
                        android:imeOptions="actionDone"
                        android:inputType="textPersonName"
                        android:maxLength="4"
                        android:textColorHint="@color/hintGray"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/text_client_name"
                        />

                    <ImageView
                        android:id="@+id/image_client_name"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintStart_toStartOf="@+id/editText_client_name"
                        app:layout_constraintTop_toTopOf="@+id/editText_client_name"
                        />

                    <!-- 상주 전화번호 -->
                    <TextView
                        android:id="@+id/text_client_tel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="24dp"
                        android:text="* 전화번호"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/editText_client_name"
                        />

                    <EditText
                        android:id="@+id/editText_client_tel"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="8dp"
                        android:ems="10"
                        android:hint="010-1234-5678"
                        android:paddingLeft="48dp"
                        android:imeOptions="actionDone"
                        android:inputType="phone"
                        android:maxLength="13"
                        android:textColorHint="@color/hintGray"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/text_client_tel"
                        />

                    <ImageView
                        android:id="@+id/image_client_tel"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintStart_toStartOf="@+id/editText_client_tel"
                        app:layout_constraintTop_toTopOf="@+id/editText_client_tel"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_radio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@+id/layout_client"
                    app:layout_constraintBottom_toTopOf="@+id/layout_urn_container"
                    tools:ignore="MissingConstraints"
                    >
                    <!-- 발주자 정보 입력 -->
                    <TextView
                        android:id="@+id/text_radio_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:text="● 발주 장소 입력"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />
                    <RadioGroup
                        android:id="@+id/radioGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@+id/text_radio_title"
                        >
                        <RadioButton
                            android:id="@+id/radioButton1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="화장장"
                            android:checked="true" />

                        <RadioButton
                            android:id="@+id/radioButton2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="장례식장" />

                        <RadioButton
                            android:id="@+id/radioButton3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="장지" />
                    </RadioGroup>

                    <!-- 화장장 -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_radio_cremation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/radioGroup"
                        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
                        >
                        <!-- 화장장 -->
                        <TextView
                            android:id="@+id/text_cremation_area"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:text="* 화장장"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            />

                        <Spinner
                            android:id="@+id/spinner_cremation_area"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@+id/text_cremation_area"
                            android:entries="@array/cremationAreas"
                            android:spinnerMode="dropdown"
                            android:defaultValue="1"
                            />

                        <!-- 화장 시간 -->
                        <TextView
                            android:id="@+id/text_cremation_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="24dp"
                            android:text="* 화장시간"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/spinner_cremation_area"
                            />

                        <EditText
                            android:id="@+id/editText_cremation_time"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_marginHorizontal="16dp"
                            android:layout_marginTop="8dp"
                            android:ems="10"
                            android:hint="2023-09-01 00:00"
                            android:paddingLeft="48dp"
                            android:imeOptions="actionDone"
                            android:inputType="datetime"
                            android:maxLength="16"
                            android:textColorHint="@color/hintGray"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/text_cremation_time"
                            />

                        <ImageView
                            android:id="@+id/image_cremation_time"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintStart_toStartOf="@+id/editText_cremation_time"
                            app:layout_constraintTop_toTopOf="@+id/editText_cremation_time"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <!-- 장례식장 -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_radio_funeral"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/radioGroup"
                        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
                        android:visibility="gone"
                        >

                        <!-- 장례식장 명 -->
                        <TextView
                            android:id="@+id/text_funeral_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:text="* 장례식장 명"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            />

                        <EditText
                            android:id="@+id/editText_funeral_name"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_marginHorizontal="16dp"
                            android:layout_marginTop="8dp"
                            android:ems="10"
                            android:hint="장례식장명을 입력하세요."
                            android:paddingLeft="48dp"
                            android:imeOptions="actionDone"
                            android:inputType="text"
                            android:maxLength="12"
                            android:textColorHint="@color/hintGray"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/text_funeral_name"
                            />

                        <ImageView
                            android:id="@+id/image_funeral_name"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintStart_toStartOf="@+id/editText_funeral_name"
                            app:layout_constraintTop_toTopOf="@+id/editText_funeral_name"
                            />

                        <!-- 호실 -->
                        <TextView
                            android:id="@+id/text_funeral_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:text="* 호실"
                            android:maxLength="8"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/editText_funeral_name"
                            />

                        <EditText
                            android:id="@+id/editText_funeral_number"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_marginHorizontal="16dp"
                            android:layout_marginTop="8dp"
                            android:ems="10"
                            android:hint="호실을 입력하세요."
                            android:paddingLeft="48dp"
                            android:imeOptions="actionDone"
                            android:inputType="text"
                            android:maxLength="8"
                            android:textColorHint="@color/hintGray"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/text_funeral_number"
                            />

                        <ImageView
                            android:id="@+id/image_funeral_number"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintStart_toStartOf="@+id/editText_funeral_number"
                            app:layout_constraintTop_toTopOf="@+id/editText_funeral_number"
                            />

                        <!-- 함 도착 시간 -->
                        <TextView
                            android:id="@+id/text_funeral_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="24dp"
                            android:text="* 함 도착 시간"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/editText_funeral_number"
                            />

                        <EditText
                            android:id="@+id/editText_funeral_time"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_marginHorizontal="16dp"
                            android:layout_marginTop="8dp"
                            android:ems="10"
                            android:hint="2023-09-01 00:00"
                            android:paddingLeft="48dp"
                            android:imeOptions="actionDone"
                            android:inputType="datetime"
                            android:maxLength="16"
                            android:textColorHint="@color/hintGray"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/text_funeral_time"
                            />

                        <ImageView
                            android:id="@+id/image_funeral_time"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintStart_toStartOf="@+id/editText_funeral_time"
                            app:layout_constraintTop_toTopOf="@+id/editText_funeral_time"
                            />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- 장지 -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_radio_burial"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/radioGroup"
                        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
                        android:visibility="gone"
                        >

                        <!-- 장지 명 -->
                        <TextView
                            android:id="@+id/text_burial_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:text="* 장지 명"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            />

                        <EditText
                            android:id="@+id/editText_burial_name"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_marginHorizontal="16dp"
                            android:layout_marginTop="8dp"
                            android:ems="10"
                            android:hint="장지명을 입력하세요."
                            android:paddingLeft="48dp"
                            android:imeOptions="actionDone"
                            android:inputType="text"
                            android:maxLength="8"
                            android:textColorHint="@color/hintGray"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/text_burial_name"
                            />

                        <ImageView
                            android:id="@+id/image_buriall_name"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintStart_toStartOf="@+id/editText_burial_name"
                            app:layout_constraintTop_toTopOf="@+id/editText_burial_name"
                            />

                        <!-- 함 도착 시간 -->
                        <TextView
                            android:id="@+id/text_burial_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="24dp"
                            android:text="* 함 도착 시간"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/editText_burial_name"
                            />

                        <EditText
                            android:id="@+id/editText_burial_time"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_marginHorizontal="16dp"
                            android:layout_marginTop="8dp"
                            android:ems="10"
                            android:hint="2023-09-01 00:00"
                            android:paddingLeft="48dp"
                            android:imeOptions="actionDone"
                            android:inputType="datetime"
                            android:maxLength="16"
                            android:textColorHint="@color/hintGray"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/text_burial_time"
                            />

                        <ImageView
                            android:id="@+id/image_burial_time"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintStart_toStartOf="@+id/editText_burial_time"
                            app:layout_constraintTop_toTopOf="@+id/editText_burial_time"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_urn_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@+id/layout_radio"
                    app:layout_constraintBottom_toTopOf="@+id/layout_tablet_container"
                    tools:ignore="MissingConstraints"
                    >

                    <FrameLayout
                        android:id="@+id/fragment_urn_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_tablet_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@+id/layout_urn_container"
                    app:layout_constraintBottom_toTopOf="@+id/layout_note"
                    tools:ignore="MissingConstraints"
                    >

                    <FrameLayout
                        android:id="@+id/fragment_tablet_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@+id/layout_tablet_container"
                    tools:ignore="MissingConstraints"
                    >
                    <!-- 발주자 명 -->
                    <TextView
                        android:id="@+id/text_note"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:text="* 특이사항 (최대 50자)"
                        app:layout_constraintStart_toStartOf="parent"
                        />

                    <EditText
                        android:id="@+id/editText_note"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="8dp"
                        android:ems="10"
                        android:hint="특이사항을 입력하세요"
                        android:paddingLeft="48dp"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:maxLength="30"
                        android:textColorHint="@color/hintGray"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/text_note"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <Button
            android:id="@+id/button_result_fragment"
            android:layout_width="0dp"
            android:layout_height="48dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="다음 페이지"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>