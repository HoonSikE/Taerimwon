<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp"
        >
        <!--발주자-->
        <TextView
            android:id="@+id/text_result_title_leader"
            style="@style/HeadBold"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="● 발주자"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_result_text_leader"
            android:background="@drawable/view_radius"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="16dp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="20dp"
            android:elevation="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/text_result_title_leader"
            >
            <TextView
                android:id="@+id/text_result_text_leader"
                style="@style/SubHead"
                android:paddingHorizontal="16dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="발주자 내용"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <!--상주 정보-->
        <TextView
            android:id="@+id/text_result_title_client"
            style="@style/HeadBold"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="● 상주 정보"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_result_text_leader"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_result_text_client"
            android:background="@drawable/view_radius"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="16dp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="20dp"
            android:elevation="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/text_result_title_client"
            >
            <TextView
                android:id="@+id/text_result_text_client"
                style="@style/SubHead"
                android:paddingHorizontal="16dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="상주 정보 내용"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <!--발주 장소-->
        <TextView
            android:id="@+id/text_result_title_location"
            style="@style/HeadBold"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="● 발주 장소"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_result_text_client"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_result_text_location"
            android:background="@drawable/view_radius"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="16dp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="20dp"
            android:elevation="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/text_result_title_location"
            >
            <TextView
                android:id="@+id/text_result_text_location"
                style="@style/SubHead"
                android:paddingHorizontal="16dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="발주 장소 내용"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <!--유골함-->
        <TextView
            android:id="@+id/text_result_title_urn"
            style="@style/HeadBold"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="● 유골함"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_result_text_location"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_result_text_urn"
            android:background="@drawable/view_radius"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="16dp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="20dp"
            android:elevation="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/text_result_title_urn"
            >
            <TextView
                android:id="@+id/text_result_text_urn"
                style="@style/SubHead"
                android:paddingHorizontal="16dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="유골함 내용"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <!--위패-->
        <TextView
            android:id="@+id/text_result_title_tablet"
            style="@style/HeadBold"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="● 위패"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_result_text_urn"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_result_text_tablet_tablet"
            android:background="@drawable/view_radius"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="16dp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="20dp"
            android:elevation="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/text_result_title_tablet"
            >
            <TextView
                android:id="@+id/text_result_text_tablet"
                style="@style/SubHead"
                android:paddingHorizontal="16dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="위패 내용"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <!--특이사항-->
        <TextView
            android:id="@+id/text_result_title_note"
            style="@style/HeadBold"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="● 특이사항(선택)"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_result_text_tablet_tablet"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_result_text_note"
            android:background="@drawable/view_radius"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="16dp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="20dp"
            android:elevation="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/text_result_title_note"
            app:layout_constraintBottom_toBottomOf="parent"
            >
            <EditText
                android:id="@+id/editText_note"
                style="@style/Body"
                android:background="@drawable/edittext_regular"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="8dp"
                android:ems="10"
                android:hint="특이사항을 입력하세요 (최대 30자)"
                android:paddingLeft="48dp"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLength="30"
                android:textColorHint="@color/hintGray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <ImageView
                android:id="@+id/image_note"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@+id/editText_note"
                app:layout_constraintTop_toTopOf="@+id/editText_note"
                app:layout_constraintBottom_toBottomOf="@+id/editText_note"
                app:srcCompat="@drawable/ic_note"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>